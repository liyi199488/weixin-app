<!--pages/post/post.wxml-->
<view>
  <swiper indicator-dots='true' indicator-color='red' vertical='' autoplay='true' interval='5000'>
    <swiper-item>
      <image src='/image/post/post-1@text.jpg'></image>
    </swiper-item>
    <swiper-item>
      <image src='/image/post/post-2@text.jpg'></image>
    </swiper-item>
    <swiper-item>
      <image src='/image/post/post-3@text.jpg'></image>
    </swiper-item>
  </swiper>
<block wx:for="{{postList}}" wx:for-item="item" wx:for-index="idx">
<view class='post-container'>
    <view class='post-auther-date'>
      <image src='{{item.avatar}}' mode='aspectFit'></image>
      <text>{{item.date}}</text>
    </view>
    <text class='post-title'>{{item.title}}</text>
    <image class='post-image' src='{{item.postImg}}' mode='aspectFit'></image>
    <text class='post-content'>{{item.content}}</text>
    <view class='post-like'>
      <image src='/image/icon/wx_app_collect.png'></image>
      <text>{{item.collectNum}}</text>
      <image src='/image/icon/wx_app_view.png'></image>
      <text>{{item.readingNum}}</text>
      <image src='/image/icon/wx_app_message.png'></image>
      <text>{{item.commentNum}}</text>
    </view>
  </view>

</block>
  


</view>